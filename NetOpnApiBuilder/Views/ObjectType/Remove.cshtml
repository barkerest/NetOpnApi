@model NetOpnApiBuilder.ViewModels.RemoveObjectTypeModel

@{
    ViewBag.Title = "Remove Object Type";
    Layout = "_Layout";
    var options = Model.OtherObjectTypes.Select(x => new SelectListItem(x.Name, x.ID.ToString()));
}

<div clsas="row">
    <div class="col-md-6">
        <div class="card bg-light">
            <div class="card-header text-white bg-primary">
                Remove Object Type
            </div>
            <div class="card-body">
                <form asp-action="Delete" asp-route-id="@Model.ObjectType.ID" method="post">
                    <div class="form-group">
                        <label>Type Being Removed</label>
                        <span class="form-control">@Model</span>
                    </div>
                    <div class="form-group">
                        <label for="replaceWithId">Replace References With</label>
                        <select id="replaceWithId" name="replaceWithId" asp-items="@options">
                        </select>
                    </div>
                    
                    <button type="submit" class="btn btn-primary" title="Delete">Delete</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index" class="btn btn-light" title="Cancel">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

